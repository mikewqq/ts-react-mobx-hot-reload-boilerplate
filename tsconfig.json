{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es2015.symbol",
      "es2015.core",
      "es2015.collection",
      "es2015.iterable",
      "es2015"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types",
    "dist"
  ]
}